{
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/minimal/**",
    "!jest.config.js",
    "!index.js"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/minimal/",
    "<rootDir>/node_modules/"
  ],
  "coverageDirectory": "coverage",
  "verbose": true,
  "forceExit": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "detectOpenHandles": true,
  "passWithNoTests": true,
  "testTimeout": 30000
}
